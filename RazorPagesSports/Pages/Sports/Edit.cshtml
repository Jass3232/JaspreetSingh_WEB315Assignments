            </div>
            <div class="form-group">
                <label asp-for="Sports.Uniform_Color" class="control-label"></label>
                <input asp-for="Sports.Uniform_Color" class="form-control" />
                <span asp-validation-for="Sports.Uniform_Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sports.Number_of_Player" class="control-label"></label>
                <input asp-for="Sports.Number_of_Player" class="form-control" />
                <span asp-validation-for="Sports.Number_of_Player" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sports.First_Price" class="control-label"></label>
                <input asp-for="Sports.First_Price" class="form-control" />
                <span asp-validation-for="Sports.First_Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
